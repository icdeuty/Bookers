

<h1>Books</h1>
<table>
	<thead>
		<th>title</th>
		<th>body</th>
		<th></th>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		    <tr>
		        <td><%= book.title %></td>
		        <td><%= book.body %></td>
		        <td><%= link_to "Show", book_path(book) %></td>
		        <td><%= link_to "Edit", edit_book_path(book) %></td>
		        <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？ "%></td>
		    </tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>

<%= form_for(@book, url:'/books') do |f| %>


<% if @book.errors.any? %>
	<div>
		<h3 style="color: red"><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
		<ul style="color: red">
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>



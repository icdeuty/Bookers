<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<% if @book.errors.any? %>
	<div>
		<h3 style="color: red"><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
		<ul style="color: red">
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<h1>Editing Book</h1>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<br>
	<%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path %>

